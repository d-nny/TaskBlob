<%- include('layout', { title: 'Dashboard', active: 'dashboard', user: user }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Server Dashboard</h1>
        <div class="btn-group">
            <a href="/domains/add" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle"></i> Add Domain
            </a>
            <a href="/accounts/add" class="btn btn-sm btn-success">
                <i class="bi bi-plus-circle"></i> Add Email Account
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Server Status -->
        <div class="col-md-6 mb-4">
            <div class="card card-dashboard h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-server"></i> Server Status</span>
                    <span class="badge bg-success status-badge">Online</span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">System Resources</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Disk Usage</h6>
                    <pre><%= diskUsage %></pre>
                    
                    <h6 class="card-subtitle mb-2 text-muted">Memory Usage</h6>
                    <pre><%= memoryUsage %></pre>
                </div>
            </div>
        </div>

        <!-- Domains Overview -->
        <div class="col-md-6 mb-4">
            <div class="card card-dashboard h-100">
                <div class="card-header">
                    <i class="bi bi-globe"></i> Mail Domains Overview
                </div>
                <div class="card-body">
                    <% if (domains && domains.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Domain</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% domains.forEach(domain => { %>
                                        <tr>
                                            <td><%= domain.domain %></td>
                                            <td><%= domain.description %></td>
                                            <td>
                                                <span class="badge bg-success">Active</span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info">
                            No mail domains configured yet. 
                            <a href="/domains/add" class="alert-link">Add your first domain</a>
                        </div>
                    <% } %>
                </div>
                <div class="card-footer text-muted text-end">
                    <a href="/domains" class="btn btn-sm btn-outline-primary">Manage Domains</a>
                </div>
            </div>
        </div>

        <!-- SSL Certificates -->
        <div class="col-md-6 mb-4">
            <div class="card card-dashboard h-100">
                <div class="card-header">
                    <i class="bi bi-shield-lock"></i> SSL Certificates
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        SSL certificates are automatically renewed 30 days before expiration.
                    </div>
                    <div class="d-grid">
                        <a href="/certificates" class="btn btn-outline-primary">Manage Certificates</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="col-md-6 mb-4">
            <div class="card card-dashboard h-100">
                <div class="card-header">
                    <i class="bi bi-link-45deg"></i> Quick Links
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="/accounts" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Email Accounts
                            <i class="bi bi-chevron-right"></i>
                        </a>
                        <a href="/logs" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Server Logs
                            <i class="bi bi-chevron-right"></i>
                        </a>
                        <a href="https://webmail.<%= process.env.DOMAIN %>" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Webmail Interface
                            <i class="bi bi-box-arrow-up-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
